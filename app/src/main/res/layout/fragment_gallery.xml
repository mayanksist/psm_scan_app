<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <EditText
        android:id="@+id/barcodetype"
        android:layout_width="365dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/txtscan"
        android:drawableLeft="@drawable/barcode"
        android:hint="Scan Barcode"
        android:maxLength="20"
        android:padding="10dp"
        android:singleLine="true"
        android:textAlignment="center"
        app:counterEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcodetype"
        app:layout_constraintVertical_bias="0.01999998">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/showproductdetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_btn">

            <TextView
                android:id="@+id/productname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:hint="N/A"
                android:text=""
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/txtunitype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:text="N/A"

                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtProductId"
                app:layout_constraintTop_toBottomOf="@+id/txtView"></TextView>

            <TextView
                android:id="@+id/txtProductId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:fontFamily="@font/allerta"
                android:text="N/A"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtStock"
                app:layout_constraintTop_toTopOf="@+id/txtView"></TextView>

            <TextView
                android:id="@+id/productqty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="N/A"
                android:text=""

                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtQuantity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtunitype"
                app:layout_constraintTop_toTopOf="@+id/txtQuantity"></TextView>

            <TextView
                android:id="@+id/priductprise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="N/A"

                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtPrice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/productqty"
                app:layout_constraintTop_toTopOf="@+id/txtPrice"></TextView>


            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="2dp"

                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/purple_500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Unit Type :"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txtView"
                app:layout_constraintTop_toBottomOf="@+id/txtView" />

            <TextView
                android:id="@+id/txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Product Id :"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/productname"
                app:layout_constraintTop_toBottomOf="@+id/productname" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:text="Price :"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productqty" />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Qty :"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/txtunitype" />

            <TextView
                android:id="@+id/txtStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:text="Current Stock :"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPrice" />

            <TextView
                android:id="@+id/txtViewL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:text="Location :"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtStock" />

            <TextView
                android:id="@+id/txtStock2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="N/A"

                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtStock"
                app:layout_constraintEnd_toEndOf="@+id/txtunitype"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/priductprise"
                app:layout_constraintTop_toTopOf="@+id/txtStock"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="N/A"

                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtViewL"
                app:layout_constraintEnd_toEndOf="@+id/txtunitype"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/priductprise"
                app:layout_constraintTop_toBottomOf="@+id/txtStock"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/productimage"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/pdbg"
                android:padding="5dp"
                android:src="@drawable/noproduct"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewL" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>