<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#fff"
    android:elevation="3dp"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:maxLines="1"
        android:text="Enter Product Id"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <EditText
        android:id="@+id/txtmpid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/frame"
        android:inputType="number"
        android:maxLength="6"
        android:maxLines="1"
        android:text="0"
        android:textColor="#000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:text="10001 " />

    <TextView
        android:id="@+id/pidtxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="10001"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/txtmpid"
        app:layout_constraintStart_toStartOf="@+id/txtmpid"
        app:layout_constraintTop_toBottomOf="@+id/txtmpid">

    </TextView>

    <Button
        android:id="@+id/btncancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="left"
        android:background="@drawable/transparent"
        android:gravity="center"
        android:text="Cancel"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divider8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider7"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnsaevpoqty"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:background="@drawable/transparent"
        android:gravity="center"
        android:text="Add"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/divider8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider8"
        app:layout_constraintTop_toTopOf="@+id/divider8" />


    <View
        android:id="@+id/divider7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qty" />

    <View
        android:id="@+id/divider8"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/btncancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btncancel"
        app:layout_constraintTop_toBottomOf="@+id/divider7" />

    <TextView
        android:id="@+id/txtpname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000"
        android:text="Alka Seltzer Plus Cold Pouch - 1007	"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/pidtxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pidtxt"
        app:layout_constraintTop_toBottomOf="@+id/pidtxt" />

    <Spinner
        android:id="@+id/spunity"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:inputType="none"
        android:padding="5dp"
        android:text="Unit Type"
        android:textSize="16dp"
        android:background="@drawable/frame"
        app:layout_constraintEnd_toEndOf="@+id/txtpname"
        app:layout_constraintStart_toStartOf="@+id/txtpname"
        app:layout_constraintTop_toBottomOf="@+id/txtpname" />

    <TextView
        android:id="@+id/qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:text="5"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/spunity"
        app:layout_constraintStart_toStartOf="@+id/spunity"
        app:layout_constraintTop_toBottomOf="@+id/spunity" />

</androidx.constraintlayout.widget.ConstraintLayout>